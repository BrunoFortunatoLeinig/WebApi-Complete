@page
@model Exercicio99Model
@{
    ViewData["Title"] = "Exercício 10";
    <style>
        p.tag1 {
            font-size: 20pt;
            font-family: 'Times New Roman', Times, serif;
            text-align: center;
        }

        label {
            font-size: 15pt;
            margin-top: 25px;
            text-align: center;
        }

        button {
            margin-top: 15px;
            box-shadow: 5px 5px 5px rgba(0,0,0,0.7);
            text-align: center;
        }

        p {
            margin-top: 25px;
            text-align: center;
            font-size: 20pt;
        }
        label.parabens {
            font-size: 15pt;
            color: green;
        }

        a.tag2 {
            color: black
        }

        a:hover {
            color: tomato;
        }

        p.tag3 {
            font-size: 10pt;
            color: red;
        }
    </style>
    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    </head>
}

<div class="text-center">
    <form method="post">
        <h1>Exercício 10</h1>
        <br />
        <p>Solicita frase ou palavra Trocas as Letras "a" ou "A" por "&"</p>
        <br />
        <label>Informe uma palavra ou frase</label>
        <input id="Frase" name="Frase" />
        <br />
        <button>Clique e veja como ficou sua Frase:</button>
        <br />
        <label class="parabens">@Html.LabelForModel(Model.Frase)</label>
        <br />
        <label class="parabens">@Html.LabelForModel(Model.FraseNova)</label>
        <br />
        <p><a class="tag2" href="/PaginaInicial">Clique Para voltar ao inicio.</a>.</p>
    </form>
</div>

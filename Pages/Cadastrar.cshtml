        <br />
        <br />
        <label>Nome de Usuário: </label>  <input id="Create" name="Usuario" />
        <br />
        <br />
        <label>Senha: </label>  <input id="Create" name="Senha" type="password" />
        <br />
        <br />
        <button type="button" class="btn-Entrar" id="entrar">Criar Cadastro</button>
        <br />
        <label>@Html.LabelForModel(Model.Create)</label>
    </form>
</div>

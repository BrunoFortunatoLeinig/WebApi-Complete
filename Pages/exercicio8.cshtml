@page
@model Exercicio8Model
@{
    ViewData["Title"] = "Exercício 8";
    <style>
        p.tag1 {
            font-size: 20pt;
            font-family: 'Times New Roman', Times, serif;
            text-align: center;
        }

        label {
            font-size: 15pt;
            margin-top: 25px;
            text-align: center;
        }

        button {
            margin-top: 15px;
            box-shadow: 5px 5px 5px rgba(0,0,0,0.7);
            text-align: center;
        }

        p {
            margin-top: 25px;
            text-align: center;
            font-size: 20pt;
        }

        label.parabens {
            font-size: 15pt;
            color: green;
        }

        a.tag2 {
            color: black
        }

        a:hover {
            color: tomato;
        }

        p.tag3 {
            font-size: 10pt;
            color: red;
        }
    </style>
    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    </head>
}

<div class="text-center">
    <form method="post">
        <h1>Exercício 8</h1>
        <br />
        <p class="tag1">Calculadora Simples Entra com 2 números e a Operação</p>
        <br />
        <label>Informe 2 números: </label>
        <input id="N5" name="N5" /> / <input id="N6" name="N6" />
        <br />
        MenuEscolha a operação: <p class="tag3">+ para Soma, - para Subtração, * para Multiplicação, / para Divisão</p>
        <br />
        <input id="OP" name="OP" />
        <br />
        <button type="submit" id="btn_ShowResult">Presione para ver o Resultado</button>
        <br />
        <label class="parabens">@Html.LabelForModel(Model.Calc)</label>
        <p><a class="tag2" href="/Exer9">Clique Para Avançarmos.</a>.</p>
    </form>
</div>
